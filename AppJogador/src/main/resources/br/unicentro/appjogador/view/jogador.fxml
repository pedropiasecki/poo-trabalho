<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.unicentro.appjogador.controller.JogadorController"
      alignment="CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Cadastro de Jogadores" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="nomeField" promptText="Nome"/>
        <TextField fx:id="posicaoField" promptText="Posição"/>
        <TextField fx:id="idadeField" promptText="Idade"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Adicionar" onAction="#adicionar"/>
        <Button text="Atualizar" onAction="#atualizar"/>
        <Button text="Excluir" onAction="#excluir"/>
    </HBox>

    <TableView fx:id="tabelaJogadores" prefWidth="500">
        <columns>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="180"/>
            <TableColumn fx:id="colPosicao" text="Posição" prefWidth="180"/>
            <TableColumn fx:id="colIdade" text="Idade" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
