<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.unicentro.appjogador.controller.EstatisticaController"
      alignment="CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Cadastro de Estatísticas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <ComboBox fx:id="jogadorBox" promptText="Jogador"/>
        <ComboBox fx:id="partidaBox" promptText="Partida"/>
        <TextField fx:id="golsField" promptText="Gols"/>
        <TextField fx:id="assistenciasField" promptText="Assistências"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Adicionar" onAction="#adicionar"/>
        <Button text="Atualizar" onAction="#atualizar"/>
        <Button text="Excluir" onAction="#excluir"/>
    </HBox>

    <TableView fx:id="tabelaEstatisticas" prefWidth="600">
        <columns>
            <TableColumn fx:id="colJogador" text="Jogador" prefWidth="150"/>
            <TableColumn fx:id="colPartida" text="Partida" prefWidth="150"/>
            <TableColumn fx:id="colGols" text="Gols" prefWidth="100"/>
            <TableColumn fx:id="colAssistencias" text="Assistências" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
