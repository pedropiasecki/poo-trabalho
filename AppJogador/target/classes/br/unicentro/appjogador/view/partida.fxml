<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.unicentro.appjogador.controller.PartidaController"
      alignment="CENTER">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Cadastro de Partidas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <DatePicker fx:id="dataField" promptText="Data"/>
        <TextField fx:id="adversarioField" promptText="Adversário"/>
        <TextField fx:id="localField" promptText="Local"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Adicionar" onAction="#adicionar"/>
        <Button text="Atualizar" onAction="#atualizar"/>
        <Button text="Excluir" onAction="#excluir"/>
    </HBox>

    <TableView fx:id="tabelaPartidas" prefWidth="500">
        <columns>
            <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
            <TableColumn fx:id="colAdversario" text="Adversário" prefWidth="180"/>
            <TableColumn fx:id="colLocal" text="Local" prefWidth="180"/>
        </columns>
    </TableView>
</VBox>
